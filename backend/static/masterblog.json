{
  "swagger": "2.0",
  "info": {
    "title": "Masterblog API",
    "version": "1.0.0"
  },
  "tags": [{ "name": "Post", "description": "Post API - CRUD" }],
  "paths": {
    "/api/posts": {
      "get": {
        "summary": "Returns all posts",
        "produces": ["application/json"],
        "tags": ["Post"],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      },
      "post": {
        "summary": "Returns the new created post",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "tags": ["Post"],
        "parameters": [
            {
              "name": "New post",
              "in": "body",
              "description": "title and contents of the new post",
              "required": true,
              "schema": {
                "$ref": "#/definitions/CreatePost"
              }
            }
          ],
        "responses": {
          "201": {
            "description": "New post created"
          },
          "400": {
            "description": "Invalid request"
          }
        }
      }
    }
  },
  "definitions": {
    "CreatePost": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "content": {
          "type": "string"
        }
      }
    }
  }
}