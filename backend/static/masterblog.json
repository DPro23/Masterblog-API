{
  "swagger": "2.0",
  "info": {
    "title": "Masterblog API",
    "version": "1.0.0"
  },
  "schemes": ["http"],
  "tags": [{ "name": "Post", "description": "Post API - CRUD" }],
  "paths": {
    "/api/posts": {
      "get": {
        "summary": "Returns all posts",
        "produces": ["application/json"],
        "tags": ["Post"],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      },
      "post": {
        "summary": "Returns the new created post",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "tags": ["Post"],
        "parameters": [
            {
              "name": "Add Post",
              "in": "body",
              "description": "Add a Post. Id will be autogenerated if success.",
              "required": true,
              "schema": {
                "$ref": "#/definitions/Post"
              }
            }
          ],
        "responses": {
          "201": {
            "description": "New post created"
          },
          "400": {
            "description": "Invalid request"
          }
        }
      }
    },
    "/api/posts/{id}": {
      "delete": {
        "summary": "Delete a Post by id",
        "produces": ["application/json"],
        "tags": ["Post"],
        "parameters": [
            {
              "name": "id",
              "in": "path",
              "description": "Post to delete by id",
              "required": true,
              "type": "integer"
            }
          ],
        "responses": {
          "200": {
            "description": "Successfully deleted post"
          },
          "404": {
            "description": "Post not found"
          }
        }
      },
      "put": {
        "summary": "Update a post by id",
        "produces": ["application/json"],
        "tags": ["Post"],
        "parameters": [
            {
              "name": "id",
              "in": "path",
              "description": "Post to update by id",
              "required": true,
              "type": "integer"
            },
            {
              "name": "Updated Post",
              "in": "body",
              "description": "Updated Post.",
              "required": true,
              "schema": {
                "$ref": "#/definitions/Post"
              }
            }
          ],
        "responses": {
          "200": {
            "description": "Updated completed"
          },
          "404": {
            "description": "Post not found"
          }
        }
      }
    },
    "/api/posts/search": {
      "get": {
        "summary": "Returns a list of posts when params are matching some Post",
        "produces": ["application/json"],
        "tags": ["Post"],
        "parameters": [
          {
            "name": "title",
            "in": "query",
            "type": "string",
            "description": "Search a Post by title"
          },
          {
            "name": "content",
            "in": "query",
            "type": "string",
            "description": "Search a Post by content"
          }
        ],
        "responses": {
          "200": {
            "description": "Valid request"
          }
        }
      }
    }
  },
  "definitions": {
    "Post": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "content": {
          "type": "string"
        }
      }
    }
  }
}